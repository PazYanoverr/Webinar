datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Investor {
  id          String       @id @default(cuid())
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  name        String?
  address     String?
  bankAccount String?
  investments Investment[]
}

model Investment {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  investor   Investor? @relation(fields: [investorId], references: [id])
  investorId String?
  stockId    String?
  quantity   Int?
  value      Decimal?
}
